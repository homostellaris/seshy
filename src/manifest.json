{
	"manifest_version": 3,
	"name": "Seshy",
	"version": "0.1.10",
	"description": "Chrome extension for effortlessly syncing browsing sessions.",
	"background": {
    	"service_worker": "worker-wrapper.js"
	},
	"action": {
		"default_icon": "/status/unsaved.png",
		"default_title": "Manage your sessions.",
		"default_popup": "/session-manager/index.html"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Ctrl+Shift+S",
				"mac": "Command+Shift+S",
				"chromeos": "Ctrl+Shift+S",
				"linux": "Ctrl+Shift+S"
			}
		}
	},
	"icons": {
		"16": "icons/seshy-logo-16.png",
		"48": "icons/seshy-logo-48.png",
		"128": "icons/seshy-logo-128.png"
	},
	"permissions": [
		"bookmarks",
		"windows",
		"tabs",
		"storage"
	]
}
