{
	"manifest_version": 2,
	"name": "Seshy",
	"version": "0.1.10",
	"description": "Chrome extension for effortlessly syncing browsing sessions.",
	"background": {
    "page": "html/backend.html",
		"persistent": false
	},
	"browser_action": {
		"default_icon": "images/unsaved.png",
		"default_title": "Manage your sessions.",
		"default_popup": "html/session-manager.html"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Ctrl+Shift+S",
				"mac": "Command+Shift+S",
				"chromeos": "Ctrl+Shift+S",
				"linux": "Ctrl+Shift+S"
			}
		}
	},
	"content_security_policy": "default-src 'self'; script-src 'self' https://unpkg.com; style-src 'self' https://unpkg.com https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;",
	"icons": {
		"16": "images/seshy-logo-16.png",
		"48": "images/seshy-logo-48.png",
		"128": "images/seshy-logo-128.png"
	},
	"permissions": [
		"bookmarks",
		"windows",
		"tabs",
		"storage"
	]
}
