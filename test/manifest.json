{
  "manifest_version": 2,
  "version": "development",

  "name": "Seshy Test",
  "description": "Test Seshy using Jasmine.",

  "background": {
    "scripts": ["test/navigate-to-spec-runner.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/unsaved.png",
    "default_title": "Manage your sessions.",
    "default_popup": "html/session-manager.html"
  },

  "permissions": ["bookmarks", "windows", "tabs", "storage", "browserAction"]
}
