{
  "manifest_version": 2,

  "name": "Seshy",
  "description": "Chrome extension for effortlessly syncing browsing sessions.",
  "version": "0.1.0",

  "background": {
    "scripts": [
      "seshy-lib.js",
      "init.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Click here!"
  },

  "permissions": [
    "bookmarks",
    "windows",
    "tabs"
  ]
}
