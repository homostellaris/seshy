{
  "manifest_version": 2,

  "name": "Seshy",
  "description": "Chrome extension for effortlessly syncing browsing sessions.",
  "version": "1.0",

  "background": {
    "scripts": ["main/seshy.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "main/popup.html",
    "default_title": "Click here!"
  },

  "permissions": [
    "bookmarks",
    "windows",
    "tabs"
  ]
}
