{
  "manifest_version": 2,

  "name": "Seshy",
  "description": "Chrome extension for effortlessly syncing browsing sessions.",
  "version": "0.1.0",

  "background": {
    "scripts": [
      "js/seshy-lib.js",
      "js/init.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Manage your sessions.",
    "default_popup": "html/session-manager.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    }
  },

  "permissions": [
    "bookmarks",
    "windows",
    "tabs",
    "storage"
  ]
}
