{
  "manifest_version": 2,

  "name": "Seshy",
  "description": "Save sessions and sync them across devices.",
  "version": "1.0",

  "background": {
    "scripts": ["main/background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "main/session-manager.js"
  ],

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "main/popup.html"
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "main/popup.html",
    "default_title": "Click here!"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "bookmarks",
    "processes"
  ]
}
